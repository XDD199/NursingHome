<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="vertical"
    android:fadingEdge="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/Button_notebook_read_return"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/to_return_grey"
            android:onClick="onClick" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/line_grey"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10pt"
            android:layout_gravity="center_vertical"
            android:text="2019年8月1日 一楼 日班 ——刘护工"
            android:textSize="21dp"
            android:textColor="#1E90FF"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/line_grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10pt"
                android:background="@drawable/tag"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="总体情况"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/textbox"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-110dp"
            android:layout_marginLeft="30dp"
            android:text="无特殊情况。"
            android:textColor="#000000"
            android:textSize="9pt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:text="有3人到访。"
            android:textColor="#000000"
            android:textSize="9pt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:text="全部换洗床单了。"
            android:textColor="#000000"
            android:textSize="9pt"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="90dp"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10pt"
                android:background="@drawable/tag"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#000000"
                android:textSize="20dp"
                android:text="个别情况"
                />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/textbox"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="-90dp"
            android:layout_marginLeft="30dp"
            android:text="@string/write_1"
            android:textColor="#F66666"
            android:textSize="6pt"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="-40dp"
            android:layout_marginLeft="120dp"
            android:text="老人血压偏高，已控制饮食，注意观察"
            android:textColor="#000000"
            android:textSize="6pt"/>

        <ImageButton
            android:id="@+id/Button_notebook_supple"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/message"
            android:onClick="onClick" />

    </LinearLayout>
</ScrollView>