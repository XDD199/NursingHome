<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/imageview_enter1"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="535dp"
        android:src="@drawable/transparent_logo"/>

    <TextView
        android:id="@+id/textview_enter1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="515dp"
        android:text="E护宝养护平台"
        android:textColor="#404040"
        android:textSize="28sp" />
    <EditText
        android:id="@+id/edittext_enter1"
        android:layout_width="326dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="450dp"
        android:background="#F2F2F2"
        android:hint="                  请输入账号"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/edittext_enter2"
        android:layout_width="326dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="389dp"
        android:background="#F2F2F2"
        android:hint="                  请输入密码"
        android:textSize="24sp" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp">

        <ImageButton
            android:id="@+id/imagebutton_enter1"
            android:layout_centerInParent="true"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/enter2" />
    </RelativeLayout>


    <CheckBox
        android:id="@+id/checkbox_enter1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="344dp"
        android:checked="false"
        android:text="记住密码"
        android:textColor="#5E5E5E" />

    <Button
        android:id="@+id/button_enter1"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_enter3"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="1dp"
        android:layout_toStartOf="@+id/button_enter2"
        android:background="#FAFAFA"
        android:minHeight="30dip"
        android:text="忘记密码" />

    <Button
        android:id="@+id/button_enter2"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_enter3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="1dp"
        android:background="#FAFAFA"
        android:minHeight="30dip"
        android:text="用户注册" />

    <Button
        android:id="@+id/button_enter3"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"
        android:background="#FAFAFA"
        android:minHeight="30dip"
        android:text="登陆即代表阅读并同意服务协议" />

</RelativeLayout>