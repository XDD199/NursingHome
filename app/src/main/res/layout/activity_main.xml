<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">

        <RelativeLayout
            android:id="@+id/login_logo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="110dp">

                <ImageView
                    android:id="@+id/imageview_enter1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/logo_enurse"
                    />

                <TextView
                    android:id="@+id/textview_enter1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="E护宝养护平台"
                    android:textColor="#000000"
                    android:textSize="34sp"
                    android:layout_toRightOf="@+id/imageview_enter1"
                    android:layout_centerVertical="true"
                    />

        </RelativeLayout>

        //account
        <LinearLayout
            android:id="@+id/login_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/login_logo"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="#fdfdfd">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_login_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="用户名："/>

                        <EditText
                            android:id="@+id/edittext_enter1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:hint="请输入用户名"
                            />
                </LinearLayout>

        </LinearLayout>

        //password
        <LinearLayout
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/login_account"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="#fdfdfd">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_login_password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="密  码："/>

                        <EditText
                            android:id="@+id/edittext_enter2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:hint="请输入登陆密码"
                            android:inputType="numberPassword"/>
                </LinearLayout>

        </LinearLayout>



        <ImageButton
            android:id="@+id/imagebutton_enter1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/login_password"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/enter2" />


        <CheckBox
            android:id="@+id/checkbox_enter1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_below="@+id/login_password"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:checked="false"
            android:text="记住密码"
            android:textColor="#5E5E5E" />

        <Button
            android:id="@+id/button_enter1"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button_enter3"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="1dp"
            android:layout_toStartOf="@+id/button_enter2"
            android:background="#FAFAFA"
            android:minHeight="30dip"
            android:text="忘记密码" />

        <Button
            android:id="@+id/button_enter2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button_enter3"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="104dp"
            android:layout_marginBottom="1dp"
            android:background="#FAFAFA"
            android:minHeight="30dip"
            android:text="用户注册" />

        <Button
            android:id="@+id/button_enter3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dp"
            android:background="#FAFAFA"
            android:minHeight="30dip"
            android:text="登陆即代表阅读并同意服务协议" />

    </RelativeLayout>